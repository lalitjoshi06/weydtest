{
  "name": "NuvioStreams",
  "language": ["en", "hi"],
  "domains": ["hayd.uk"],
  "base_url": "https://nuviostreams.hayd.uk",
  
  "search_url_format_episode": {
    "string_format": "/stream/series/%s:%02d:%02d.json",
    "replacement": [
      "imdb_id",
      "season_int",
      "episode_int"
    ]
  },
  
  "search_url_format_movie": {
    "string_format": "/stream/movie/%s.json",
    "replacement": ["imdb_id"]
  },

  "api": {
    "path_to_array": "streams",
    "path_title_in_array": "name",
    "path_quality": "title",
    "path_url": "url",
    "path_link": "url"
  },

  "is_torrent": false,
  "is_direct": true
}

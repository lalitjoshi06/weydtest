{
  "name": "TorrentControl",
  "language": ["en"],
  "domains": ["torrentcontrol.pw"],
  "base_url": "https://torrentcontrol.pw",

  "search_url_format_movie": {
    "string_format": "/api/v1/torrents?per_page=100&search=%s",
    "replacement": ["imdb_id"]
  },

  "search_url_format_episode": {
    "string_format": "/api/v1/torrents?per_page=100&search=%s%%20S%02dE%02d",
    "replacement": ["imdb_id", "season_int", "episode_int"]
  },

  "api": {
    "path_to_array": "data",
    "path_title_in_array": "file_name",
    "path_seeders": "seeders",
    "path_leechers": "leechers",
    "path_size": "size_in_mb",
    "path_magnet": "magnet_uri",   
    "parse_size_from_string": false
  },

  "is_torrent": true,
  "is_direct": false
}
